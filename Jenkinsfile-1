DOCKER_MAVEN_IMAGE = 'maven:3.9.3-eclipse-temurin-17'
DOCKER_MAVEN_ARGS = '--user root -v /var/run/docker.sock:/var/run/docker.sock'
pipeline {
    agent {
        docker {
          image DOCKER_MAVEN_IMAGE
          args DOCKER_MAVEN_ARGS
          reuseNode true
        }
      }
    parameters {
        booleanParam(
            defaultValue: true,
            description: 'Include tests',
            name: 'isTest'
        )
    }
    stages {
        stage('Package') {
            steps {
                sh '''
                pwd
                echo 'build jar'
                mvn --version
                mvn clean install -DskipTests
                '''
            }
       }
        stage ('Build') {
            steps {
                echo 'build image'
                sh "cd ${env.WORKSPACE}"
                sh 'pwd'
                sh 'docker build -t rovetskyi/jenkins-test:0.0.3 .'
            }
        }
        stage('Front end') {
            agent {
                docker {
                    image 'node:16-alpine'
                }
            }
            steps {
                sh 'node --version'
            }
        }
    }
}