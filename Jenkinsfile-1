def workspaceDir
pipeline {
    agent none
    parameters {
        booleanParam(
            defaultValue: true,
            description: 'Include tests',
            name: 'isTest'
        )
    }
    stages {
        stage('Initializing globals') {
            steps {
                script {
                    workspaceDir = "${WORKSPACE}"
                    echo "${WORKSPACE}"
                }
            }
        }
        stage('Package') {
            agent {
                docker {
                    image 'maven:3.9.3-eclipse-temurin-17'
                }
            }
            steps {
                sh '''
                echo 'build jar'
                mvn --version
                mvn clean install -DskipTests
                '''
            }
       }
       stage ('Test') {
           agent {
               docker {
                   image 'maven:3.9.3-eclipse-temurin-17'
               }
           }
          when {
                expression {
                    params.isTest == true
                }

            }
            steps {
                echo 'testing'
                sh 'mvn test'
            }
        }
        stage ('Build') {
                agent any
                steps {
                    echo 'build image'
                    sh 'pwd'
                    sh 'docker build -t rovetskyi/jenkins-test:0.0.3 .'
                }
        }
        stage('Front end') {
            agent {
                docker {
                    image 'node:16-alpine'
                }
            }
            steps {
                sh 'node --version'
            }
        }
    }
}