DOCKER_MAVEN_IMAGE = 'maven:3.5.2-jdk-8-alpine'
DOCKER_MAVEN_ARGS = '-v $HOME/.m2:/root/.m2'
pipeline {
    agent none
    parameters {
        booleanParam(
            defaultValue: true,
            description: 'Include tests',
            name: 'isTest'
        )
    }
    stages {
        stage('load') {
          agent {
            docker {
              image DOCKER_MAVEN_IMAGE
              args DOCKER_MAVEN_ARGS
            }
          }
        stage('Package') {
            steps {
                sh '''
                echo '$HOME'
                echo 'build jar'
                mvn --version
                mvn clean install -DskipTests
                '''
            }
       }
        stage ('Build') {
            steps {
                echo 'build image'
                sh 'pwd'
                sh 'docker build -t rovetskyi/jenkins-test:0.0.3 .'
            }
        }
        stage('Front end') {
            agent {
                docker {
                    image 'node:16-alpine'
                }
            }
            steps {
                sh 'node --version'
            }
        }
    }
}