pipeline {
    agent none
    parameters {
        booleanParam(
            defaultValue: true,
            description: 'Include tests',
            name: 'isTest'
        )
    }
    stages {
        stage('Package') {
            agent any
            steps {
                sh '''
                echo "${env.HOME}"
                echo 'build jar'
                mvn --version
                mvn clean install -DskipTests
                '''
            }
       }
        stage ('Build') {
                agent any
                steps {
                    echo 'build image'
                    sh 'pwd'
                    sh 'docker build -t rovetskyi/jenkins-test:0.0.3 .'
                }
        }
        stage('Front end') {
            agent {
                docker {
                    image 'node:16-alpine'
                }
            }
            steps {
                sh 'node --version'
            }
        }
    }
}