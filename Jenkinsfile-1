pipeline {
    agent none
    parameters {
        booleanParam(
            defaultValue: true,
            description: 'Include tests',
            name: 'isTest'
        )
    }
    stages {
        stage('Package') {
            agent {
                docker {
                    image 'maven:3.9.3-eclipse-temurin-17'
                    args '-v $HOME/.m2: /root/.m2:z -u root'
                    reuseNode true
                }
            }
            steps {
                sh '''
                echo '$HOME'
                echo 'build jar'
                mvn --version
                mvn clean install -DskipTests
                '''
            }
       }
        stage ('Build') {
                agent any
                steps {
                    echo 'build image'
                    sh 'pwd'
                    sh 'docker build -t rovetskyi/jenkins-test:0.0.3 .'
                }
        }
        stage('Front end') {
            agent {
                docker {
                    image 'node:16-alpine'
                }
            }
            steps {
                sh 'node --version'
            }
        }
    }
}