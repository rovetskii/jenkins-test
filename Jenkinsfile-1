pipeline {
    agent none
    stages {
        stage('Setup parameters') {
            steps {
                script {
                    properties([
                        parameters([
                            booleanParam(
                                defaultValue: true,
                                description: 'Include tests',
                                name: 'isTest'
                            )
                        ])
                    ])
                }
            }
        }
        stage('Package') {
            agent {
                docker {
                    image 'maven:3.9.3-eclipse-temurin-17'
                }
            }
            steps {
                sh '''
                echo 'build jar'
                mvn --version
                mvn clean package -DskipTests
                '''
              when {
                    expression {
                        params.isTest == true
                    }
                    echo ('testing')
                    sh 'mvn test'
                }
                echo 'build image'
                sh 'docker build -t rovetskyi/jenkins-test:0.0.3 .'
            }
        }
        stage('Front end') {
            agent {
                docker {
                    image 'node:16-alpine'
                }
            }
            steps {
                sh 'node --version'
            }
        }
    }
}