def workspaceDir
pipeline {
    agent {
        docker {
            image 'maven:3.9.3-eclipse-temurin-17'
        }
    }
    parameters {
        booleanParam(
            defaultValue: true,
            description: 'Include tests',
            name: 'isTest'
        )
        //workspace = env.WORKSPACE
    }
    stages {
        stage('Initializing globals') {
            steps {
                script {
                    workspaceDir = "${WORKSPACE}"
                    echo workspaceDir
                }
            }
        }
        stage('Package') {
            steps {
                sh '''
                echo 'build jar'
                mvn --version
                mvn clean install -DskipTests
                '''
            }
       }
       stage ('Test') {
          when {
                expression {
                    "${params.isTest}" == true
                }

            }
            steps {
                echo 'testing'
                sh 'mvn test'
            }
        }
        stage ('Build') {
                steps {
                     echo 'build image'
                    sh "cd ${workspaceDir}"
                    sh 'pwd'
                    sh 'docker build -t rovetskyi/jenkins-test:0.0.3 .'
                }
        }
        stage('Front end') {
            agent {
                docker {
                    image 'node:16-alpine'
                }
            }
            steps {
                sh 'node --version'
            }
        }
    }
}